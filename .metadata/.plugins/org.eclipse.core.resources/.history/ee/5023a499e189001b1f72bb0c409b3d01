package trabalho2;

import java.util.Scanner;

public class questao55 {
	
	
	public static void main(String[] args){
		
	Scanner ler = new Scanner(System.in);
	String nomeCompleto;

	System.out.printf("Informe seu nome completo:\n");
	nomeCompleto = ler.nextLine();

	System.out.printf(nomeCompleto, args);
}
	
	public static void main1(String [] args) {
		
		String nomeCompleto;
		String nomeAbreviado;
		final static String ESPACO = " ";	
		int i = 0;
		
		if (nomeCompleto.length() != 1) { 
			i = nomeCompleto.length() - 1;
			while ((nomeCompleto.substring(i-1,i)).equals(ESPACO))
				i--;
				nomeCompleto = nomeCompleto.substring(0,i+1);
		}
		
	}
}
