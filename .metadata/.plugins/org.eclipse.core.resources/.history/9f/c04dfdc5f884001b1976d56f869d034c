    	int n5 = 0; 
    	int n6 = 0; 
    	
    	for(int contador=0; contador<100; contador++) {
    		numero=(int) (1+ Math.random()*(7-1));
    		
    		if(numero==1) {
    			n1++;
    		}else if (numero==2) {
    			n2++;
    		} else if (numero==3) {
    			n3++;
    		} else if (numero==4) {
    			n4++;
    		}else if (numero==5) {
    			n5++;
    		}else if (numero==6) {
    			n6++;
    		}
