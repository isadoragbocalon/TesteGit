package trabalho1;

import java.util.Random;

public class Trabalho1 {
	
	public static void main(String[] args) {

        Random gerador = new Random();
        
        //100 jogadas de 1 número inteiro aleatório entre 1 e 6
        for (int i = 0; i < 100 ; i++) {
            System.out.println(gerador.nextInt(6)+1);
        }
        
        int n1 = 0; 
    	int n2 = 0; 
    	int n3 = 0; 
    	int n4 = 0; 
    	int n5 = 0; 
    	int n6 = 0; 
    	
    	for(int contador=0; contador100; contador++) {
    		gerador=(int) (1+ Math.random()*(7-1));
    		
    		if(gerador==1) {
    			n1++;
    		}else if (gerador==2) {
    			n2++;
    		}
    	}
    
    	
    	

  
        
    	switch(contador)
		{
		case 1:
			++n1; //incrementa o contador de 1s
		break;
		case 2:
			++n2; //incrementa o contador de 2s
			break;
		case 3:
			++n3; //incrementa o contador de 3s
			break;
		case 4:
			++n4; //incrementa o contador de 4s
			break;
		case 5:
			++n5; //incrementa o contador de 5s
			break;
		case 6:
			++n6; //incrementa o contador de 6s
			break;//opcional no final do switch
		}
    	
    	//System.out.printf("O valor 1 foi sorteado", n1);
    	//System.out.printf("O valor 2 foi sorteado", n2);
    	//System.out.printf("O valor 3 foi sorteado", n3);
    	//System.out.printf("O valor 4 foi sorteado", n4);
    	//System.out.printf("O valor 5 foi sorteado", n5);
    	//System.out.printf("O valor 6 foi sorteado", n6);	
    	
    	System.out.printf("1\t%d\n2\t%d\n3\t%d\n4\t%d\n5\t%d\n6\t%d\n", n1, n2, n3, n4, n5, n6);
}
}



